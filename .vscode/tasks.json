{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/Facial_Recognition.cpp",
                "-o",
                "${workspaceFolder}/Facial_Recognition.exe",
                "-I",
                "C:/opencv/build/include",
                "-L",
                "C:/opencv/build/x64/mingw/lib",
                "-lopencv_core",
                "-lopencv_imgcodecs",
                "-lopencv_highgui",
                "-lopencv_imgproc",
                "-lopencv_objdetect",
                "-std=c++17"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
